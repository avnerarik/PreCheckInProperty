@using BookingConfirm.Models
@model ClientViewModel

<div id="top" class="row" style="height:600px;background:url(../../images/big-photo1.jpg);background-size:cover;background-repeat:no-repeat;">
    
    <div class="container">
        <div class="white opacity col-md-3" style="margin:25px 25px;padding:10px;">
            <h5 style="margin:10px">Welcome @ViewBag.fName</h5>
            @using (Html.BeginForm("Index", "Home", FormMethod.Post, new { @class = "form", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.TextBoxFor(m => m.lname, new { @Value = ViewBag.lName , @class = "form-control", @placeholder = "Please enter your last name", @required = "required" })
                </div>
                
                <div class="form-group">
                    @Html.TextBoxFor(m => m.reservNumber, new { @Value = ViewBag.bNumber , @class = "form-control", @placeholder = "Please enter the Reservation Number" })
                </div>

                <div>
                    @Html.HiddenFor(m => m.fname, new { @Value = ViewBag.fName })
                    @Html.HiddenFor(m => m.propCode, new { @Value = ViewBag.pCode })
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-success" value="Check Reservation" />
                </div>
            }
        </div>
    </div>

</div>

<hr />

