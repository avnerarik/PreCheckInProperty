                            <div class="form-group">
                                @ViewBag.cnty
                            </div>
                        </div>
                        <div class="col-xs-6 col-sm-4 col-md-4">
                            <div class="form-group">
                                @ViewBag.stat
                            </div>
                        </div>
                    </div>

                    <hr style="border:1px solid grey" />

                    <h4>Booking Details</h4>
                    <div class="row">
                        <div class="col-xs-12 col-sm-4 col-md-4">
                            <div class="form-group">
                                @ViewBag.darrival
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-4 col-md-4">
                            <div class="form-group">
                                @ViewBag.ddeparture
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12 col-sm-6 col-md-4">
                            <div class="form-group">
                                @ViewBag.rtype
                            </div>
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-4">
                            <div class="form-group">
                                @ViewBag.adlt
                            </div>
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-4">
                            <div class="form-group">
                                ViewBag.chld
                            </div>
                        </div>
                    </div>

                    <hr style="border:1px solid grey" />

                    <h4>Payment Details</h4>
                    <div class="row">
                        @if (ViewBag.paym != "CSH")
                        {
                            <div class="col-xs-12 col-sm-6 col-md-4">
                                <div class="form-group">
                                    <span>
                                        <img src="~/images/amex.png" width="32" style="margin:0px 1px" />
                                        <img src="~/images/mastercard.png" width="32" style="margin:0px 1px" />
                                        <img src="~/images/visa.png" width="32" style="margin:0px 1px" />
                                    </span>
                                    @Html.DropDownList(
                               "cardType",
                             new List<SelectListItem>
                             {
                                    new SelectListItem { Text = "American Express", Value = "American Express" },
                                    new SelectListItem { Text = "MasterCard",  Value = "MasterCard" },
                                    new SelectListItem { Text = "Visa",  Value = "Visa" }
                             },
                             new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-4">
                                <div class="form-group">
                                    @ViewBag.auth
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-4">
                                <div class="form-group">
                                    @ViewBag.cardnumb
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-6 col-md-4">
                                <div class="form-group">
                                    @ViewBag.cardexp
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="col-xs-12 col-sm-6 col-md-4">
                                <div class="form-group">
                                    "Cash"
                                </div>
                            </div>
                        }
                    </div>
    
                @*}*@
            </form>
        </div>
    </div>

</div>

